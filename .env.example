# =============================================================================
# RAG GPU Server - Environment Variables
# =============================================================================

# Server
HOST=0.0.0.0
PORT=8000

# Models
EMBEDDING_MODEL=BAAI/bge-m3
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# vLLM (container separado)
VLLM_BASE_URL=http://localhost:8080/v1
VLLM_MODEL=Qwen/Qwen3-8B-AWQ

# Hardware
DEVICE=cuda
USE_FP16=true

# Hugging Face cache
HF_HOME=/root/.cache/huggingface

# Git (para startup script)
REPO_URL=https://github.com/seu-usuario/rag-gpu-server.git
